# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=sqlite:///./llmlocal.db
CHROMADB_PATH=./chromadb_data

# RAG Settings
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_FILE_SIZE_MB=10
RAG_TOP_K_RESULTS=5

# Web Search
DUCKDUCKGO_ENABLED=true
SEARXNG_URL=
MAX_SEARCH_RESULTS=10

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Paths
INDEXED_DIRECTORIES=/home/user
EXCLUDED_PATTERNS=node_modules,.git,.cache,__pycache__,venv,.venv,dist,build,.npm,.yarn

# Sensitive Paths (always excluded)
SENSITIVE_PATTERNS=.ssh,.gnupg,.password-store,.aws,.docker,*.key,*.pem

# API Keys (Optional)
NVD_API_KEY=
ALIENVAULT_API_KEY=
PROXMOX_HOST=
PROXMOX_USER=
PROXMOX_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=50
